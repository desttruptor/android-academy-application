<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/dimen_4x"
        android:background="@color/background_black">

        <TextView
            android:id="@+id/tv_label_movies_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_4x"
            android:layout_marginTop="56dp"
            android:drawablePadding="@dimen/dimen_2x"
            android:includeFontPadding="false"
            android:text="@string/label_movies_list"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_combined_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/movie_item_container"
            layout="@layout/movies_list_movies_item"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimen_6x"
            app:layout_constraintStart_toStartOf="@+id/tv_label_movies_list"
            app:layout_constraintTop_toBottomOf="@id/tv_label_movies_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>