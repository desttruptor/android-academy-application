<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_navigation"
    app:startDestination="@id/fragmentMoviesList">
    <fragment
        android:id="@+id/fragmentMovieDetails"
        android:name="me.podlesnykh.androidacademyapplication.FragmentMovieDetails"
        android:label="FragmentMovieDetails"
        tools:layout="@layout/fragment_movie_details">
        <action
            android:id="@+id/navigate_to_movies_list"
            app:destination="@id/fragmentMoviesList" />
    </fragment>
    <fragment
        android:id="@+id/fragmentMoviesList"
        android:name="me.podlesnykh.androidacademyapplication.FragmentMoviesList"
        android:label="FragmentMoviesList"
        tools:layout="@layout/fragment_movies_list">
        <action
            android:id="@+id/navigate_to_movie_item"
            app:destination="@id/fragmentMovieDetails" />
    </fragment>
</navigation>